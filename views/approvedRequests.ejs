<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Approved Requests</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #fff8f4;
        }
        .header {
            background-color: #007bff;
            color: white;
            padding: 20px;
            text-align: center;
            border-radius: 5px;
        }
        .request-card {
            background-color: white;
            border-radius: 8px;
            padding: 15px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }
        .urgency-badge {
            font-size: 0.9rem;
            text-transform: uppercase;
            font-weight: bold;
        }
        .table-header {
            background-color: #d4c6ff;
            color: white;
        }
        .btn-success-custom {
            background-color: #28a745;
            color: white;
            font-weight: bold;
            text-transform: uppercase;
        }
        .table th, .table td {
            text-align: center;
        }
        .btn-view {
            background-color: #007bff;
            color: white;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <!-- Header Section -->
        <div class="header mb-4">
            <h1>Approved Requests</h1>
        </div>

        <!-- Button to Add New Request -->
        <div class="text-right mb-3">
            <a href="/view" class = "btn btn-success-custom ">Back</a>
        </div>

        <!-- Display Approved Requests -->
        <% if (approvedRequests.length > 0) { %>
            <div class="row">
                <% approvedRequests.forEach(function(request) { %>
                    <div class="col-md-4 mb-3">
                        <div class="request-card">
                            <h4><%= request.elderName %> - <%= request.taskType %></h4>
                            <p><strong>Description:</strong> <%= request.description %></p>
                            <p><strong>Urgency:</strong>
                                <span class="badge <%= request.urgency === 'High' ? 'badge-danger' : (request.urgency === 'Medium' ? 'badge-warning' : 'badge-success') %> urgency-badge">
                                    <%= request.urgency %>
                                </span>
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="alert alert-info text-center">No approved requests available.</div>
        <% } %>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>




