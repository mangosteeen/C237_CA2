<form action="/filter" method="GET">
    <!-- Search Bar -->
    <label for="title">Search by Title:</label>
    <input type="text" name="title" id="title" value="<%= title %>">

    <!-- Filter Dropdowns -->
    <label for="urgency">Filter by Urgency:</label>
    <select name="urgency" id="urgency">
        <option value="">All</option>
        <option value="High" <%= urgency === 'High' ? 'selected' : '' %>>High</option>
        <option value="Medium" <%= urgency === 'Medium' ? 'selected' : '' %>>Medium</option>
        <option value="Low" <%= urgency === 'Low' ? 'selected' : '' %>>Low</option>
    </select>

    <label for="type">Filter by Task Type:</label>
    <select name="type" id="type">
        <option value="">All</option>
        <option value="Appointment" <%= type === 'Appointment' ? 'selected' : '' %>>Appointment</option>
        <option value="Medication" <%= type === 'Medication' ? 'selected' : '' %>>Medication</option>
        <option value="Exercise" <%= type === 'Exercise' ? 'selected' : '' %>>Exercise</option>
    </select>

    <button type="submit">Apply Filters</button>
</form>

<!-- Display filtered tasks -->
<ul>
    <% tasks.forEach(task => { %>
        <li><%= task.title %> - <%= task.urgency %> - <%= task.type %></li>
    <% }) %>
</ul>
