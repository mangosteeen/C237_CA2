<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Filtered Requests</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f7f7f7;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h2 {
            color: #4a90e2;
            text-align: center;
            margin-top: 40px;
            font-weight: 600;
        }

        .form-control {
            border-radius: 25px;
            padding: 12px;
            border: 1px solid #ddd;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        .request-card {
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            padding: 20px;
            transition: transform 0.2s;
        }

        .request-card:hover {
            transform: translateY(-5px);
        }

        .request-card h4 {
            color: #4a90e2;
            font-size: 1.2rem;
        }

        .urgency {
            padding: 4px 8px;
            border-radius: 10px;
            color: #fff;
        }

        .text-success {
            background-color: #65e0b0;
        }

        .text-warning {
            background-color: #f8b451;
        }

        .text-danger {
            background-color: #e04e57;
        }

        .btn-primary, .btn-danger {
            border-radius: 25px;
            padding: 10px 20px;
            text-transform: uppercase;
            font-weight: 600;
        }

        .btn-primary {
            background-color: #4a90e2;
            border: none;
        }

        .btn-primary:hover {
            background-color: #2a72a0;
        }

        .btn-danger {
            background-color: #e04e57;
            border: none;
        }

        .btn-danger:hover {
            background-color: #c43a4f;
        }

        .request-card p {
            font-size: 0.9rem;
            line-height: 1.5;
            color: #555;
        }

        .d-grid {
            max-width: 600px;
            margin: 20px auto;
        }

        .form-label {
            font-weight: 500;
            color: #333;
        }

        /* Add a soft background color for the filter form */
        .filter-form {
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 30px;
            max-width: 600px;
            margin: 40px auto;
        }

        .filter-form select, .filter-form input {
            background-color: #f9f9f9;
        }
    </style>
</head>
<body>

    <div class="filter-form">
        <form method="GET" action="/view">
            <div class="mb-3">
                <label for="el" class="form-label">Search by Elder's Name:</label>
                <input type="text" class="form-control" id="el" name="el" value="<%= el || '' %>">
            </div>
            <div class="mb-3">
                <label for="urgency" class="form-label">Filter by Urgency:</label>
                <select class="form-control" id="urgency" name="urgency">
                    <option value="">-- Select Urgency --</option>
                    <option value="Low" <%= urgency === 'Low' ? 'selected' : '' %>>Low</option>
                    <option value="Medium" <%= urgency === 'Medium' ? 'selected' : '' %>>Medium</option>
                    <option value="High" <%= urgency === 'High' ? 'selected' : '' %>>High</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="taskType" class="form-label">Filter by Task Type:</label>
                <input type="text" class="form-control" id="taskType" name="taskType" value="<%= taskType || '' %>">
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Filter</button>
            </div>
        </form>
    </div>

    <h2>Filtered Requests <small>(<%= resultCount %> results)</small></h2>

    <div class="container">
        <% userRequests.forEach(function(request) { %>
            <div class="request-card">
                <h4><%= request.elderName %> - <%= request.taskType %></h4>
                <p><strong>Description:</strong> <%= request.description %></p>
                <p><strong>Urgency:</strong>
                    <span class="urgency <%= request.urgency === 'Low' ? 'text-success' : request.urgency === 'Medium' ? 'text-warning' : 'text-danger' %>">
                        <%= request.urgency %>
                    </span>
                </p>
                <p><strong>Status:</strong> <%= request.status %></p>
                <a href="/requests/<%= request.id %>/edit" class="btn btn-primary">Edit</a>
                <a href="/requests/<%= request.id %>/delete" class="btn btn-danger">Delete</a>
            </div>
            <hr>
        <% }); %>
    </div>

</body>
</html>

