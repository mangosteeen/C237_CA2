<form action="/filter" method="GET">
    <!-- Search Bar -->
    <label for="el">Search by Elder's Name:</label>
    <input type="text" name="el" id="el" value="<%= el %>">

    <!-- Filter Dropdowns -->
    <label for="urgency">Filter by Urgency:</label>
    <select name="urgency" id="urgency">
        <option value="">All</option>
        <option value="High" <%= urgency === 'High' ? 'selected' : '' %>>High</option>
        <option value="Medium" <%= urgency === 'Medium' ? 'selected' : '' %>>Medium</option>
        <option value="Low" <%= urgency === 'Low' ? 'selected' : '' %>>Low</option>
    </select>

    <label for="taskType">Filter by Task Type:</label>
    <select name="taskType" id="taskType">
        <option value="">All</option>
        <option value="Appointment" <%= taskType === 'Appointment' ? 'selected' : '' %>>Appointment</option>
        <option value="Medication" <%= taskType === 'Medication' ? 'selected' : '' %>>Medication</option>
        <option value="Exercise" <%= taskType === 'Exercise' ? 'selected' : '' %>>Exercise</option>
    </select>

    <button type="submit">Apply Filters</button>
</form>

<!-- Display filtered tasks -->
<ul>
    <% tasks.forEach(task => { %>
        <li><%= task.elderName %> - <%= task.urgency %> - <%= task.taskType %></li>
    <% }) %>
</ul>

