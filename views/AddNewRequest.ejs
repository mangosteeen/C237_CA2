<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Elderly Assistance App</title>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Elderly Assistance App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/inventory">Inventory</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/addNewRequest">Add New Request</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li> 
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mt-4">
    <h2 class="text-center mb-4">Add New Request</h2>
    <form action="/addNewRequest" method="POST" enctype="multipart/form-data" class="mx-auto" style="max-width: 500px;">

      <div class="mb-3">
        <label for="name" class="form-label">Elderly's Name</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>

      <div class="mb-3">
        <label for="taskType" class="form-label">Task Type</label>
        <input type="text" class="form-control" id="taskType" name="taskType" required>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <input type="text" class="form-control" id="description" name="description" required>
      </div>

      <div class="mb-4">
        <label for="urgency" class="form-label">Urgency</label>
        <input type="text" class="form-control" id="urgency" name="urgency" required>
      </div>

      <div class="mb-4">
        <label for="status" class="form-label">Request Status</label>
        <input type="text" class="form-control" id="status" name="status" required>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-primary">Add New Request</button>
      </div>

    </form>
  </div>
</body>
</html>

