<!DOCTYPE html>
<html>
<head>
    <title>My Requests</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #fff8f4;
        }
        .card {
            margin-bottom: 1.5rem;
            border-radius: 12px;
        }
        .card-title {
            font-size: 1.25rem;
        }
        .badge {
            font-size: 0.95rem;
        }
        .nav-buttons {
            margin-bottom: 20px;
        }
        .nav-buttons a {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>View My Requests</h1>
        <p>
        Welcome, <%= user.username %> 
        <% if (user.role === 'elderly') { %> (üëµ Elderly) <% } else { %> (ü§ù Volunteer) <% } %>
        </p>

        <!-- Navigation Buttons -->
        <div class="nav-buttons">
            <% if (user.role === 'volunteer') { %>
                <a href="/admin" class="btn btn-primary">Admin Dashboard</a>
            <% } %>
            <a href="/addNewRequest" class="btn btn-success">Add New Request</a>
            <a href="/filter" class="btn btn-info">Search / Filter Requests</a>
            <a href="/logout" class="btn btn-secondary">Logout</a>
        </div>

        <!-- List of Requests -->
        <% if (userRequests && userRequests.length > 0) { %>
            <% userRequests.forEach(request => { %>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= request.elderName %> - <%= request.taskType %></h5>
                        <p class="card-text"><strong>Description:</strong> <%= request.description %></p>
                        <p class="card-text">
                            <strong>Urgency:</strong>
                            <% if (request.urgency === 'High') { %>
                                <span class="badge badge-danger">High</span>
                            <% } else if (request.urgency === 'Medium') { %>
                                <span class="badge badge-warning">Medium</span>
                            <% } else { %>
                                <span class="badge badge-success">Low</span>
                            <% } %>
                        </p>
                        <p class="card-text"><strong>Status:</strong> <%= request.requestStatus %></p>

                        <% if (user.role === 'volunteer') { %>
                            <a href="/requests/<%= request.id %>/edit" class="btn btn-outline-primary btn-sm">Edit</a>
                            <a href="/requests/<%= request.id %>/delete" onclick="return confirm('Are you sure you want to delete this?')" class="btn btn-outline-danger btn-sm">Delete</a>
                            <form action="/acceptRequest/<%= request.id %>" method="POST">
                            <button type="submit" class="btn btn-success">Accept Request</button>
                        </form>
                        <% } %>
                    </div>
                
                </div>
            <% }) %>
        <% } else { %>
            <div class="alert alert-info">You have no requests currently.</div>
        <% } %>
    </div>
</body>
</html>
