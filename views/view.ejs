<!DOCTYPE html>
<html>
<head>
    <title>My Requests</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #fff8f4;
        }
        .card {
            margin-bottom: 1.5rem;
            border-radius: 12px;
        }
        .card-title {
            font-size: 1.25rem;
        }
        .badge {
            font-size: 0.95rem;
        }
        .nav-buttons {
            margin-bottom: 20px;
        }
        .nav-buttons a {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>View My Requests</h1>
        <p>
        Welcome, <%= user.username %>
        <% if (user.role === 'elderly') { %> (üëµ Elderly) <% } else { %> (ü§ù Volunteer) <% } %>
        </p>

        <% if (user.role==='volunteer' ) { %>
            <form method="GET" action="/view" class="mb-4">
                <div class="form-row align-items-end">
                    <div class="col-auto">
                        <label for="urgency">Filter by Urgency</label>
                        <select id="urgency" name="urgency" class="form-control">
                            <option value="">All</option>
                            <option value="High" <%=filters && filters.urgency==='High' ? 'selected' : '' %>>High</option>
                            <option value="Medium" <%=filters && filters.urgency==='Medium' ? 'selected' : '' %>>Medium</option>
                            <option value="Low" <%=filters && filters.urgency==='Low' ? 'selected' : '' %>>Low</option>
                        </select>
                    </div>
                    <div class="col-auto">
                        <label for="taskType">Filter by Task Type</label>
                        <select id="taskType" name="taskType" class="form-control">
                            <option value="">All</option>
                            <option value="Grocery Shopping" <%=filters && filters.taskType==='Grocery Shopping' ? 'selected'
                                : '' %>>Grocery Shopping</option>
                            <option value="Medication Pickup" <%=filters && filters.taskType==='Medication Pickup' ? 'selected'
                                : '' %>>Medication Pickup</option>
                            <option value="House Cleaning" <%=filters && filters.taskType==='House Cleaning' ? 'selected' : ''
                                %>>House Cleaning</option>
                        </select>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">Apply Filter</button>
                        <a href="/view" class="btn btn-secondary">Reset</a>
                    </div>
                </div>
            </form>
            <% } %>

        <!-- ‚úÖ Flash Success Message -->
        <% if (messages && messages.length > 0) { %>
          <div class="alert alert-success alert-dismissible fade show" role="alert">
            <% messages.forEach(function(msg) { %>
              <p class="mb-0"><%= msg %></p>
            <% }) %>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <% } %>

        <!-- Navigation Buttons -->
        <div class="nav-buttons">
            <% if (user.role === 'volunteer') { %>
                <a href="/admin" class="btn btn-primary">Admin Dashboard</a>
            <% } %>
            <a href="/addNewRequest" class="btn btn-success">Add New Request</a>
            <a href="/logout" class="btn btn-secondary">Logout</a>
        </div>

        <!-- List of Requests -->
        <% if (userRequests && userRequests.length > 0) { %>
            <% userRequests.forEach(request => { %>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= request.elderName %> - <%= request.taskType %></h5>
                        <p class="card-text"><strong>Description:</strong> <%= request.description %></p>
                        <p class="card-text">
                            <strong>Urgency:</strong>
                            <% if (request.urgency === 'High') { %>
                                <span class="badge badge-danger">High</span>
                            <% } else if (request.urgency === 'Medium') { %>
                                <span class="badge badge-warning">Medium</span>
                            <% } else { %>
                                <span class="badge badge-success">Low</span>
                            <% } %>
                        </p>
                        <p class="card-text"><strong>Status:</strong> <%= request.requestStatus %></p>

                        <% if (user.role === 'volunteer') { %>
                            <a href="/requests/<%= request.id %>/edit" class="btn btn-outline-primary btn-sm">Edit</a>
                            <a href="/requests/<%= request.id %>/delete" onclick="return confirm('Are you sure you want to delete this?')" class="btn btn-outline-danger btn-sm">Delete</a>
                            <form action="/acceptRequest/<%= request.id %>" method="POST">
                                <button type="submit" class="btn btn-success mt-2">Accept Request</button>
                            </form>
                        <% } else if (user.role === 'elderly' && request.elderName === user.username && request.requestStatus === 'pending') { %>
                            <a href="/requests/<%= request.id %>/edit" class="btn btn-outline-primary btn-sm">Edit</a>
                            <a href="/requests/<%= request.id %>/delete" onclick="return confirm('Are you sure you want to cancel this request?')" class="btn btn-outline-danger btn-sm">Cancel</a>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <div class="alert alert-info">You have no requests currently.</div>
        <% } %>
    </div>

    <!-- ‚úÖ Bootstrap JS + Auto-dismiss -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      setTimeout(() => {
        const alert = document.querySelector('.alert');
        if (alert) {
          alert.classList.remove('show');
          alert.classList.add('fade');
        }
      }, 3000); // 3 seconds
    </script>
</body>
</html>
