<div class="container mt-4">
    <h1>Approved Requests</h1>

    <!-- Button to redirect to approved requests -->
    <a href="/approved" class="btn btn-primary mb-3">Go to Approved Requests</a>
    
    <% if (approvedRequests.length > 0) { %>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Task Type</th>
                    <th>Description</th>
                    <th>Urgency</th>
                </tr>
            </thead>
            <tbody>
                <% approvedRequests.forEach(function(request) { %>
                    <tr>
                        <td><%= request.elderName %></td>
                        <td><%= request.taskType %></td>
                        <td><%= request.description %></td>
                        <td><%= request.urgency %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No approved requests available.</p>
    <% } %>
</div>



